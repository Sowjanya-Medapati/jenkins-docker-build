pipeline {
    agent {
     docker {
      image 'maven:3.8.3-openjdk-17'
      }
     }

    stages {
        stage('build') {
            steps {
                echo "Hello world !!"
                echo "Hello Sowjanya !!!!"
                sh 'mvn -B -DskipTests clean package'
                echo "done"
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
                }
          stage('docker-image') {
              steps {
                 sh 'docker build -t task1-sowji .'
              }
          }
            }
        }
        
    }
}
